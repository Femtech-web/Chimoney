{
  "name": "chipay-server",
  "version": "1.0.0",
  "description": "This is the chipay server",
  "main": "index.ts",
  "scripts": {
    "dev": "ts-node-dev index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:staged": "lint-staged",
    "pre-push": "npm run pre-push:test",
    "pre-push:test": "prepush-if-changed"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "axios": "^1.6.7",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "src/**/*.{js,jsx,ts,tsx,css,scss,html,md}": "prettier --write"
  },
  "prepush-if-changed": {
    "src/**/*.{js,jsx,ts,tsx}": "echo 'Files changed on App. Launching tests.' && npm run test"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/pg": "^8.11.0",
    "lint-staged": "^15.2.2",
    "prepush-if-changed": "^1.0.8",
    "prisma": "^5.10.2",
    "ts-node-dev": "^2.0.0",
    "tsc-files": "^1.1.4",
    "typescript": "^5.3.3"
  }
}
