{
  "name": "chipay-server",
  "version": "1.0.0",
  "description": "This is the chipay server",
  "main": "index.ts",
  "scripts": {
    "dev": "ts-node-dev index.ts",
    "test": "echo \"Error: no test specified\"",
    "lint:staged": "lint-staged",
    "pre-push": "npm run pre-push:test",
    "pre-push:test": "prepush-if-changed",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "prettier \"**/*.ts\" \"**/*.js\" \"**/*.tsx\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "axios": "^1.6.7",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "src/**/*.{js,jsx,ts,tsx,css,scss,html,md}": "prettier --write"
  },
  "prepush-if-changed": {
    "src/**/*.{js,jsx,ts,tsx}": "echo 'Files changed on App. Launching tests.' && npm run test"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "lint-staged": "^15.2.2",
    "prepush-if-changed": "^1.0.8",
    "prettier": "^3.2.5",
    "prisma": "^5.10.2",
    "ts-node-dev": "^2.0.0",
    "tsc-files": "^1.1.4",
    "typescript": "^5.3.3"
  }
}
